@model IEnumerable<AlmacenajeUSACR.Models.Cliente>

@{
    ViewData["Title"] = "Lista clientes";
}

<h1>Listado de todos los clientes</h1>

<p>
    <a asp-action="Create">Registrar cliente nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo_cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_completo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero_identificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_nacimiento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_completo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero_identificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_nacimiento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
