@model AlmacenajeUSACR.Models.Articulo_custodia

@{
    ViewData["Title"] = "Ingresar articulo";
}

<h1>Ingreso de articulo al predio</h1>

<h4>Articulo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Codigo_cliente" class="control-label"></label>
                <input asp-for="Codigo_cliente" class="form-control" />
                <span asp-validation-for="Codigo_cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Transportista</label></br>
                @Html.DropDownList("Codigo_transportista",ViewBag.opcionesTrans, "Seleccione", new { required = "required" })
                <span asp-validation-for="Codigo_transportista" class="text-danger"></span>
            </div></br>
            <div class="form-group">
                <label asp-for="TrackingID" class="control-label"></label>
                <input asp-for="TrackingID" class="form-control" />
                <span asp-validation-for="TrackingID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Peso" class="control-label"></label>
                <input asp-for="Peso" class="form-control" />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio_articulo" class="control-label"></label>
                <input asp-for="Precio_articulo" class="form-control" />
                <span asp-validation-for="Precio_articulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha_ingreso" class="control-label"></label>
                <input asp-for="Fecha_ingreso" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="Fecha_ingreso" class="text-danger"></span>
            </div></br>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" onclick="return confirm('¿Confirma que desea agregar el articulo?')"/>
            </div>
        </form>
    </div>
</div></br>

<div>
    <a asp-controller="Home" asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

   
}
